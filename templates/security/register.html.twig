{% extends 'base.html.twig' %}

{% block title %}Inscription - Météo App{% endblock %}

{% block body %}
<div class="auth-container">
    <!-- Animated Background -->
    <div class="auth-bg">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
            <div class="shape shape-5"></div>
        </div>
    </div>

    <!-- Content -->
    <div class="auth-content">
        <!-- Logo & Title -->
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
                </svg>
            </div>
            <h1 class="auth-title">Inscription</h1>
            <p class="auth-subtitle">Créez votre compte météo personnalisé</p>
        </div>

        <!-- Register Card -->
        <div class="auth-card">
            {% if registrationForm.vars.errors|length > 0 %}
                <div class="auth-error">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
                    </svg>
                    <span>{{ registrationForm.vars.errors[0].message }}</span>
                </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'auth-form', 'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    <label for="{{ registrationForm.email.vars.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                            <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                        </svg>
                        Email
                    </label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input', 'placeholder': 'votre@email.com'}}) }}
                    {% if registrationForm.email.vars.errors|length > 0 %}
                        <span class="field-error">{{ registrationForm.email.vars.errors[0].message }}</span>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="{{ registrationForm.plainPassword.vars.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0 00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z" clip-rule="evenodd" />
                        </svg>
                        Mot de passe
                    </label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-input', 'placeholder': '••••••••'}}) }}
                    {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                        <span class="field-error">{{ registrationForm.plainPassword.vars.errors[0].message }}</span>
                    {% endif %}
                    <span class="field-hint">Minimum 6 caractères</span>
                </div>

                <button type="submit" class="auth-button auth-button-success">
                    <span>Créer mon compte</span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M19.916 4.626a.75.75 0 01.208 1.04l-9 13.5a.75.75 0 01-1.154.114l-6-6a.75.75 0 011.06-1.06l5.353 5.353 8.493-12.739a.75.75 0 011.04-.208z" clip-rule="evenodd" />
                    </svg>
                </button>
            {{ form_end(registrationForm) }}

            <div class="auth-divider">
                <span>ou</span>
            </div>

            <a href="{{ path('app_login') }}" class="auth-link-button">
                J'ai déjà un compte
            </a>
        </div>

        <!-- Back to home -->
        <a href="{{ path('app_weather_home') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M11.03 3.97a.75.75 0 010 1.06l-6.22 6.22H21a.75.75 0 010 1.5H4.81l6.22 6.22a.75.75 0 11-1.06 1.06l-7.5-7.5a.75.75 0 010-1.06l7.5-7.5a.75.75 0 011.06 0z" clip-rule="evenodd" />
            </svg>
            Retour à l'accueil
        </a>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .auth-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        z-index: -1;
    }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.3), rgba(5, 150, 105, 0.3));
        filter: blur(60px);
        animation: float 20s ease-in-out infinite;
    }

    .shape-1 { width: 500px; height: 500px; top: -150px; left: -150px; background: linear-gradient(135deg, rgba(52, 211, 153, 0.25), rgba(16, 185, 129, 0.25)); }
    .shape-2 { width: 400px; height: 400px; top: 40%; right: -100px; background: linear-gradient(135deg, rgba(102, 126, 234, 0.25), rgba(118, 75, 162, 0.25)); animation-delay: -5s; }
    .shape-3 { width: 300px; height: 300px; bottom: 5%; left: 15%; background: linear-gradient(135deg, rgba(79, 172, 254, 0.25), rgba(0, 242, 254, 0.25)); animation-delay: -10s; }
    .shape-4 { width: 200px; height: 200px; top: 25%; left: 55%; background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(52, 211, 153, 0.2)); animation-delay: -7s; }
    .shape-5 { width: 350px; height: 350px; bottom: -100px; right: 10%; background: linear-gradient(135deg, rgba(168, 237, 234, 0.25), rgba(254, 214, 227, 0.25)); animation-delay: -3s; }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) rotate(0deg) scale(1); }
        33% { transform: translate(30px, -30px) rotate(5deg) scale(1.05); }
        66% { transform: translate(-20px, 20px) rotate(-5deg) scale(0.95); }
    }

    .auth-content {
        width: 100%;
        max-width: 420px;
        padding: 2rem;
        z-index: 10;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-logo {
        width: 70px;
        height: 70px;
        margin: 0 auto 1.25rem;
        background: linear-gradient(135deg, #10b981, #059669);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 15px 35px rgba(16, 185, 129, 0.4);
    }

    .auth-logo svg {
        width: 38px;
        height: 38px;
        color: white;
    }

    .auth-title {
        font-size: 2.25rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .auth-subtitle {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.12);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }

    .auth-error {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        border-radius: 14px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        background: rgba(239, 68, 68, 0.15);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #fca5a5;
    }

    .auth-error svg {
        width: 22px;
        height: 22px;
        flex-shrink: 0;
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }

    .form-group label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.85);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .form-group label svg {
        width: 18px;
        height: 18px;
        opacity: 0.7;
    }

    .form-input,
    .form-group input[type="email"],
    .form-group input[type="password"],
    .form-group input[type="text"] {
        background: rgba(0, 0, 0, 0.35) !important;
        border: 1px solid rgba(255, 255, 255, 0.12) !important;
        border-radius: 14px !important;
        padding: 1rem 1.25rem !important;
        color: white !important;
        font-size: 1rem !important;
        transition: all 0.3s ease !important;
        outline: none !important;
        width: 100% !important;
        box-sizing: border-box !important;
    }

    .form-input::placeholder,
    .form-group input::placeholder {
        color: rgba(255, 255, 255, 0.35) !important;
    }

    .form-input:focus,
    .form-group input:focus {
        border-color: rgba(16, 185, 129, 0.7) !important;
        background: rgba(0, 0, 0, 0.45) !important;
        box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.15) !important;
    }

    .field-error {
        color: #fca5a5;
        font-size: 0.8rem;
        margin-top: 0.25rem;
    }

    .field-hint {
        color: rgba(255, 255, 255, 0.45);
        font-size: 0.8rem;
    }

    .auth-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        color: white;
        border: none;
        padding: 1.1rem 2rem;
        border-radius: 14px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 0.75rem;
    }

    .auth-button-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .auth-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(16, 185, 129, 0.5);
    }

    .auth-button:active {
        transform: translateY(-1px);
    }

    .auth-button svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
    }

    .auth-button:hover svg {
        transform: scale(1.1);
    }

    .auth-divider {
        display: flex;
        align-items: center;
        margin: 1.75rem 0;
    }

    .auth-divider::before,
    .auth-divider::after {
        content: '';
        flex: 1;
        height: 1px;
        background: rgba(255, 255, 255, 0.12);
    }

    .auth-divider span {
        padding: 0 1.25rem;
        color: rgba(255, 255, 255, 0.45);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .auth-link-button {
        display: block;
        text-align: center;
        padding: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 14px;
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .auth-link-button:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.25);
        transform: translateY(-2px);
    }

    .back-link {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.5);
        text-decoration: none;
        margin-top: 2rem;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: white;
    }

    .back-link svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .back-link:hover svg {
        transform: translateX(-4px);
    }

    @media (max-width: 480px) {
        .auth-content { padding: 1rem; }
        .auth-card { padding: 1.5rem; border-radius: 20px; }
        .auth-title { font-size: 1.75rem; }
        .auth-logo { width: 60px; height: 60px; border-radius: 16px; }
        .auth-logo svg { width: 32px; height: 32px; }
    }
</style>
{% endblock %}
