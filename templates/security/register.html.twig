{% extends 'base.html.twig' %}

{% block title %}Inscription - Météo App{% endblock %}

{% block body %}
<div class="auth-container auth-register">
    <div class="auth-bg">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
            <div class="shape shape-5"></div>
        </div>
    </div>

    <div class="auth-content">
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
                </svg>
            </div>
            <h1 class="auth-title">Inscription</h1>
            <p class="auth-subtitle">Créez votre compte météo personnalisé</p>
        </div>

        <div class="auth-card">
            {% if registrationForm.vars.errors|length > 0 %}
                <div class="auth-error">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
                    </svg>
                    <span>{{ registrationForm.vars.errors[0].message }}</span>
                </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'auth-form', 'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    <label for="{{ registrationForm.email.vars.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                            <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                        </svg>
                        Email
                    </label>
                    {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'votre@email.com'}}) }}
                    {% if registrationForm.email.vars.errors|length > 0 %}
                        <span class="field-error">{{ registrationForm.email.vars.errors[0].message }}</span>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="{{ registrationForm.plainPassword.vars.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0 00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z" clip-rule="evenodd" />
                        </svg>
                        Mot de passe
                    </label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': '••••••••'}}) }}
                    {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                        <span class="field-error">{{ registrationForm.plainPassword.vars.errors[0].message }}</span>
                    {% endif %}
                    <span class="field-hint">Minimum 6 caractères</span>
                </div>

                <button type="submit" class="auth-button">
                    <span>Créer mon compte</span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M19.916 4.626a.75.75 0 01.208 1.04l-9 13.5a.75.75 0 01-1.154.114l-6-6a.75.75 0 011.06-1.06l5.353 5.353 8.493-12.739a.75.75 0 011.04-.208z" clip-rule="evenodd" />
                    </svg>
                </button>
            {{ form_end(registrationForm) }}

            <div class="auth-divider"><span>ou</span></div>
            <a href="{{ path('app_login') }}" class="auth-link-button">J'ai déjà un compte</a>
        </div>

        <a href="{{ path('app_weather_home') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M11.03 3.97a.75.75 0 010 1.06l-6.22 6.22H21a.75.75 0 010 1.5H4.81l6.22 6.22a.75.75 0 11-1.06 1.06l-7.5-7.5a.75.75 0 010-1.06l7.5-7.5a.75.75 0 011.06 0z" clip-rule="evenodd" />
            </svg>
            Retour à l'accueil
        </a>
    </div>
</div>

<style>
    /* Register - Couleurs vertes + surcharges */
    .auth-register .shape { background: linear-gradient(135deg, rgba(16, 185, 129, 0.3), rgba(5, 150, 105, 0.3)); }
    .auth-register .shape-1 { background: linear-gradient(135deg, rgba(52, 211, 153, 0.25), rgba(16, 185, 129, 0.25)); }
    .auth-register .shape-2 { background: linear-gradient(135deg, rgba(102, 126, 234, 0.25), rgba(118, 75, 162, 0.25)); }
    .auth-register .shape-3 { background: linear-gradient(135deg, rgba(79, 172, 254, 0.25), rgba(0, 242, 254, 0.25)); }
    .auth-register .shape-4 { background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(52, 211, 153, 0.2)); }
    .auth-register .shape-5 { background: linear-gradient(135deg, rgba(168, 237, 234, 0.25), rgba(254, 214, 227, 0.25)); }

    .auth-register .auth-logo {
        background: linear-gradient(135deg, #10b981, #059669);
        box-shadow: 0 15px 35px rgba(16, 185, 129, 0.4);
    }
    .auth-register .auth-button {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }
    .auth-register .auth-button:hover {
        box-shadow: 0 15px 35px rgba(16, 185, 129, 0.5);
    }
    .auth-register .auth-button:hover svg {
        transform: scale(1.1);
    }
    .auth-register .form-group input:focus {
        border-color: rgba(16, 185, 129, 0.7) !important;
        box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.15) !important;
    }
</style>
{% endblock %}
