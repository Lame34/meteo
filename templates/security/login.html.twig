{% extends 'base.html.twig' %}

{% block title %}Connexion - Météo App{% endblock %}

{% block body %}
<div class="auth-container">
    <!-- Animated Background -->
    <div class="auth-bg">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
            <div class="shape shape-5"></div>
        </div>
    </div>

    <!-- Content -->
    <div class="auth-content">
        <!-- Logo & Title -->
        <div class="auth-header">
            <div class="auth-logo">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
                </svg>
            </div>
            <h1 class="auth-title">Connexion</h1>
            <p class="auth-subtitle">Accédez à vos prévisions météo personnalisées</p>
        </div>

        <!-- Login Card -->
        <div class="auth-card">
            {% if error %}
                <div class="auth-error">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zm0 8.25a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
                    </svg>
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="auth-success">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
                    </svg>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}

            <form method="post" class="auth-form">
                <div class="form-group">
                    <label for="username">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                            <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                        </svg>
                        Email
                    </label>
                    <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus autocomplete="email" placeholder="votre@email.com">
                </div>

                <div class="form-group">
                    <label for="password">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0 00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z" clip-rule="evenodd" />
                        </svg>
                        Mot de passe
                    </label>
                    <input type="password" id="password" name="_password" required autocomplete="current-password" placeholder="••••••••">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="auth-button">
                    <span>Se connecter</span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.97 3.97a.75.75 0 011.06 0l7.5 7.5a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 11-1.06-1.06l6.22-6.22H3a.75.75 0 010-1.5h16.19l-6.22-6.22a.75.75 0 010-1.06z" clip-rule="evenodd" />
                    </svg>
                </button>
            </form>

            <div class="auth-divider">
                <span>ou</span>
            </div>

            <a href="{{ path('app_register') }}" class="auth-link-button">
                Créer un compte
            </a>
        </div>

        <!-- Back to home -->
        <a href="{{ path('app_weather_home') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M11.03 3.97a.75.75 0 010 1.06l-6.22 6.22H21a.75.75 0 010 1.5H4.81l6.22 6.22a.75.75 0 11-1.06 1.06l-7.5-7.5a.75.75 0 010-1.06l7.5-7.5a.75.75 0 011.06 0z" clip-rule="evenodd" />
            </svg>
            Retour à l'accueil
        </a>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .auth-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        z-index: -1;
    }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
        filter: blur(60px);
        animation: float 20s ease-in-out infinite;
    }

    .shape-1 { width: 500px; height: 500px; top: -150px; left: -150px; }
    .shape-2 { width: 400px; height: 400px; top: 40%; right: -100px; background: linear-gradient(135deg, rgba(240, 147, 251, 0.25), rgba(245, 87, 108, 0.25)); animation-delay: -5s; }
    .shape-3 { width: 300px; height: 300px; bottom: 5%; left: 15%; background: linear-gradient(135deg, rgba(79, 172, 254, 0.25), rgba(0, 242, 254, 0.25)); animation-delay: -10s; }
    .shape-4 { width: 200px; height: 200px; top: 25%; left: 55%; animation-delay: -7s; }
    .shape-5 { width: 350px; height: 350px; bottom: -100px; right: 10%; background: linear-gradient(135deg, rgba(168, 237, 234, 0.25), rgba(254, 214, 227, 0.25)); animation-delay: -3s; }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) rotate(0deg) scale(1); }
        33% { transform: translate(30px, -30px) rotate(5deg) scale(1.05); }
        66% { transform: translate(-20px, 20px) rotate(-5deg) scale(0.95); }
    }

    .auth-content {
        width: 100%;
        max-width: 420px;
        padding: 2rem;
        z-index: 10;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-logo {
        width: 70px;
        height: 70px;
        margin: 0 auto 1.25rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
    }

    .auth-logo svg {
        width: 38px;
        height: 38px;
        color: white;
    }

    .auth-title {
        font-size: 2.25rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .auth-subtitle {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.12);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }

    .auth-error, .auth-success {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        border-radius: 14px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
    }

    .auth-error {
        background: rgba(239, 68, 68, 0.15);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #fca5a5;
    }

    .auth-success {
        background: rgba(34, 197, 94, 0.15);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #86efac;
    }

    .auth-error svg, .auth-success svg {
        width: 22px;
        height: 22px;
        flex-shrink: 0;
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }

    .form-group label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.85);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .form-group label svg {
        width: 18px;
        height: 18px;
        opacity: 0.7;
    }

    .form-group input {
        background: rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 14px;
        padding: 1rem 1.25rem;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
    }

    .form-group input::placeholder {
        color: rgba(255, 255, 255, 0.35);
    }

    .form-group input:focus {
        border-color: rgba(102, 126, 234, 0.7);
        background: rgba(0, 0, 0, 0.45);
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
    }

    .auth-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 1.1rem 2rem;
        border-radius: 14px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 0.75rem;
    }

    .auth-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.5);
    }

    .auth-button:active {
        transform: translateY(-1px);
    }

    .auth-button svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
    }

    .auth-button:hover svg {
        transform: translateX(5px);
    }

    .auth-divider {
        display: flex;
        align-items: center;
        margin: 1.75rem 0;
    }

    .auth-divider::before,
    .auth-divider::after {
        content: '';
        flex: 1;
        height: 1px;
        background: rgba(255, 255, 255, 0.12);
    }

    .auth-divider span {
        padding: 0 1.25rem;
        color: rgba(255, 255, 255, 0.45);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .auth-link-button {
        display: block;
        text-align: center;
        padding: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 14px;
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .auth-link-button:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.25);
        transform: translateY(-2px);
    }

    .back-link {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.5);
        text-decoration: none;
        margin-top: 2rem;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: white;
    }

    .back-link svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .back-link:hover svg {
        transform: translateX(-4px);
    }

    @media (max-width: 480px) {
        .auth-content { padding: 1rem; }
        .auth-card { padding: 1.5rem; border-radius: 20px; }
        .auth-title { font-size: 1.75rem; }
        .auth-logo { width: 60px; height: 60px; border-radius: 16px; }
        .auth-logo svg { width: 32px; height: 32px; }
    }
</style>
{% endblock %}
