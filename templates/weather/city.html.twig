{% extends 'base.html.twig' %}

{% block title %}Météo à {{ city_name }}{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center p-4">
        <div class="bg-gray-800 rounded-xl shadow-2xl p-8 w-full max-w-md border border-gray-700">

            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-4xl font-bold capitalize">{{ city_name }}</h1>
                    <p class="text-gray-400 text-sm mt-1">Aujourd'hui</p>
                </div>
                <div class="text-right">
                    <p class="text-5xl font-bold text-blue-400">{{ weather.main.temp|round }}°C</p>
                    <p class="text-gray-400 text-sm">Ressenti {{ weather.main.feels_like|round }}°C</p>
                </div>
            </div>

            <div class="flex flex-col items-center mb-8">
                <img src="https://openweathermap.org/img/wn/{{ weather.weather[0].icon }}@4x.png"
                     alt="Icone météo"
                     class="w-32 h-32">
                <p class="text-xl capitalize font-medium">{{ weather.weather[0].description }}</p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="bg-gray-700/50 p-4 rounded-lg text-center">
                    <p class="text-gray-400 text-xs uppercase tracking-wider">Humidité</p>
                    <p class="text-xl font-bold">{{ weather.main.humidity }}%</p>
                </div>
                <div class="bg-gray-700/50 p-4 rounded-lg text-center">
                    <p class="text-gray-400 text-xs uppercase tracking-wider">Vent</p>
                    <p class="text-xl font-bold">{{ (weather.wind.speed * 3.6)|round }} km/h</p>
                </div>
            </div>

            <div class="mt-8 text-center">
                <a href="{{ path('app_weather_home') }}" class="text-blue-400 hover:text-blue-300 text-sm font-medium transition-colors">
                    ← Faire une autre recherche
                </a>
            </div>
        </div>
    </div>
{% endblock %}
